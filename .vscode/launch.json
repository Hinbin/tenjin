  "version": "0.2.0",
  "configurations": [
          {
                  "type": "rdbg",
                  "name": "Debug current file with rdbg",
                  "request": "launch",
                  "command": "rspec",
                  "script": "${file}",
                  "args": [],
                  "askParameters": false                  
          },
          {
                  "type": "rdbg",
                  "name": "Attach with rdbg",
                  "request": "attach"
          },
          {
                "type": "rdbg",
                "name": "Debug current spec with rdbg",
                "request": "launch",
                "command": "rspec",
                "script": "${file}:${lineNumber}",
                "args": [],
                "askParameters": false     
          },
          {
                "type": "rdbg",
                "name": "Launch Rails server with rdbg",
                "request": "launch",
                "script": "./blog/bin/rails s",
                "useBundler": false,
                "command": "ruby"
              },
  ]
}